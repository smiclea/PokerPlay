<?xml version="1.0" encoding="utf-8"?>
<s:WindowedApplication xmlns:fx="http://ns.adobe.com/mxml/2009" 
					   xmlns:s="library://ns.adobe.com/flex/spark" 
					   xmlns:mx="library://ns.adobe.com/flex/mx" 
					   xmlns:views="views.*"
					   showStatusBar="false"
					   width="880"
					   height="720">
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
		
	<s:VGroup width="100%"
			  height="100%"
			  paddingBottom="20"
			  paddingTop="20"
			  paddingLeft="20"
			  paddingRight="20"
			  horizontalAlign="center"
			  gap="20">
		
		<views:TableView />
		
		<s:Label text="{GameModel.getInstance().message}"
				 fontSize="30"/>
		
		<s:HGroup>
			<s:Button label="New recommendation"
					  click="GameModel.getInstance().recommendAction()"/>
			
			<s:Button label="Analyze flop"
					  click="GameModel.getInstance().analyzeFlop()"/>
		</s:HGroup>
		
		<s:List dataProvider="{AbstractAnalyzer.logData}" 
				width="100%"
				height="100"/>
		
	</s:VGroup>
	
	<fx:Script>
		<![CDATA[
			import models.GameModel;
			import models.analyzers.AbstractAnalyzer;
		]]>
	</fx:Script>
</s:WindowedApplication>
